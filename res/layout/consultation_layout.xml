<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView1"
            android:background="#ffffff"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

        <include
                layout="@layout/custom_title_bar"/>

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/consultation_back"
                android:layout_marginTop="10dp"
                >

            <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >


                <EditText
                        android:id="@+id/etName"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_edit_text"
                        />


                <TextView
                        android:id="@+id/tvName"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="Name"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />

            </TableRow>

            <TableRow
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >


                <EditText
                        android:id="@+id/etAge"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_edit_text"
                        />


                <TextView
                        android:id="@+id/tvAge"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="Age"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />

            </TableRow>


            <TableRow
                    android:id="@+id/trMobile"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >


                <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_edit_text"
                        android:inputType="number"
                        android:textColor="#000000"
                        >

                    <requestFocus/>
                </EditText>


                <TextView
                        android:id="@+id/tvMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:paddingRight="2dp"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:text="Mobile"
                        android:textColor="#ffffff"
                        />

            </TableRow>

            <TableRow
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >

                <Spinner
                        android:id="@+id/spinner_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />


                <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="State"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />

            </TableRow>

            <TableRow
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >


                <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />


                <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="City"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />

            </TableRow>
            <!--
                        <TableRow
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp" >

                            <Button
                                android:id="@+id/btnProblem"
                                android:layout_column="0"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Choose"
                                android:textColor="#000000" android:layout_height="wrap_content" android:layout_gravity="center_vertical"/>



                            <TextView
                                android:id="@+id/tvProblem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:gravity="right"
                                android:text="Problem"
                                android:textColor="#ffffff" android:shadowColor="#000000" android:shadowDx="2" android:shadowDy="2" android:shadowRadius="2" android:paddingRight="2dp"/>

                        </TableRow>
            -->
            <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >


                <EditText
                        android:id="@+id/etTozihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:background="@drawable/background_edit_text"
                        >

                </EditText>


                <TextView
                        android:id="@+id/tvTozihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="Comments"
                        android:textColor="#ffffff"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />

            </TableRow>

        </TableLayout>

        <TableLayout

                android:minWidth="25px"

                android:minHeight="25px"

                android:layout_width="fill_parent"

                android:layout_height="wrap_content"


                android:layout_marginRight="10dp"

                android:layout_marginLeft="10dp"

                android:background="@color/tile_back"

                android:layout_marginTop="10dp"
                >

            <TableRow

                    android:layout_marginTop="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >


                <TextView
                        android:id="@+id/tv_rbSendViaSms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Send Via Sms"
                        android:textColor="@color/menu_text_color"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />


                <RadioButton
                        android:id="@+id/rbSendViaSms"
                        android:layout_column="1"
                        android:layout_gravity="center_vertical"
                        android:checked="true"
                        android:layout_height="25dp"
                        android:layout_width="25dp"
                        android:background="@drawable/radio"
                        android:button="@drawable/empty"
                        />

            </TableRow>

            <TableRow

                    android:layout_marginBottom="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    >


                <TextView
                        android:id="@+id/tv_rbSendViaEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Send Via Email"
                        android:textColor="@color/menu_text_color"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:paddingRight="2dp"
                        />


                <RadioButton
                        android:id="@+id/rbSendViaEmail"
                        android:layout_column="1"

                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:background="@drawable/radio"
                        android:button="@drawable/empty"
                        />

            </TableRow>

        </TableLayout>

        <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/consultation_back"
                android:minHeight="25px"
                android:minWidth="25px"
                >

            <TableRow>

                <Button
                        android:id="@+id/btnCancel"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textColor="@color/menu_text_color"
                        android:layout_width="64dp"
                        android:background="@drawable/bg_button_style"
                        />

                <Button
                        android:id="@+id/btnOk"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Ok"
                        android:textColor="@color/menu_text_color"
                        android:layout_width="64dp"
                        android:background="@drawable/bg_button_style"
                        />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>