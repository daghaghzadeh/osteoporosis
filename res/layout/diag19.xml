<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Diagnosis"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/Diagnosis"
            >

        <include
                layout="@layout/diag_header"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_title"
                android:text="طول دوره درمان"
                style="@style/Diagnosis.Title"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_content"
                android:text="برای چه مدت به بیمار خدمات درمانی خاص برای پوکی استخوان ارائه شده است؟"
                style="@style/Diagnosis.Content"
                />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_less"
                android:text="کمتر از 2 سال"
                style="@style/Diagnosis.Button"
                />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_more"
                android:text="2 سال یا بیشتر"
                style="@style/Diagnosis.Button"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="background information"
                style="@style/Diagnosis.Information"
                android:id="@+id/diag_info"

                />
    </LinearLayout>
</RelativeLayout>