<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Diagnosis"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/Diagnosis"
            >

        <include
                layout="@layout/diag_header"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_title"
                android:text="تصفیه کراتینین"
                style="@style/Diagnosis.Title"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_content"
                android:text="آیا تصفیه کراتینین بیش از 35 میلی لیتر بر دقیقه می باشد؟"
                style="@style/Diagnosis.Content"
                />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_yes"
                android:text="بله"
                style="@style/Diagnosis.Yes"
                />

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/diag_no"
                android:text="خیر"
                style="@style/Diagnosis.No"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="اطلاعات پیش زمینه"
                style="@style/Diagnosis.Information"
                android:id="@+id/diag_info"

                />
    </LinearLayout>
</RelativeLayout>