<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Diagnosis"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.Title"
                android:text="درمان های فعلی: انتخاب های برای ادامه یا تغییر روش درمانی "
                android:id="@+id/diag_title"
                />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l1"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="بیسفسفنات خوراکی"
                    android:id="@+id/diag_title1"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l2"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="بیسفسفنات وریدی"
                    android:id="@+id/diag_title2"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l3"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="دنوسوماب"
                    android:id="@+id/diag_title3"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l4"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="تعدیل کننده های انتخابی گیرنده  استروژن (SERM برای مثال رالوکسیفن)"
                    android:id="@+id/diag_title4"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l5"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="استرانسیوم رانلات"
                    android:id="@+id/diag_title5"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.SwitchingButton"
                android:orientation="horizontal"
                android:id="@+id/diag_l6"
                >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="تریپاراتید، PTH"
                    android:id="@+id/diag_title6"

                    />
        </LinearLayout>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/Diagnosis.Button"
                android:text="اطلاعات درباره داروهای پوکی استخوان"
                android:id="@+id/diag_info_btn"
                android:layout_marginTop="5dp"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="background information"
                style="@style/Diagnosis.Information"
                android:id="@+id/diag_info"

                />
    </LinearLayout>
</RelativeLayout>